<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/task_item"
    >

    <CheckBox
        android:id="@+id/checkbox_completed"
        android:layout_width="wrap_content"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_task_name"
        android:layout_toStartOf="@id/important"
        android:textAlignment="textStart"
        android:layout_toEndOf="@+id/checkbox_completed"
        android:layout_alignTop="@id/checkbox_completed"
        android:layout_alignBottom="@id/checkbox_completed"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText,RtlCompat" />

    <ImageView
        android:id="@+id/important"
        android:layout_alignTop="@id/text_task_name"
        android:layout_alignBottom="@id/text_task_name"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_priority"
        android:contentDescription="Important sign"
        tools:ignore="HardcodedText" />


</RelativeLayout>